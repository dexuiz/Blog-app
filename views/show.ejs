<% include partials/header.ejs %>

<div class="ui main text container segment">
  <div class="ui huge header"><%=blog.name%></div>
    <div class="ui top attached ">
      <div class="item">
        <img class="ui centered rounded image" src="<%= blog.image %>" alt="blog image"></img>
      </div>
      <div class="content">
        <span><%=blog.created.toDateString()%></span>
        <p><%=blog.body%></p>
      </div>
    </div>
    <a href="/blogs/<%=blog._id%>/edit" class="ui basic orange button">Edit</a>
    <form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST" id="delete">
      <button type="submit" class="ui red basic button">Delete</button>
    </form>
</div>

<% include partials/footer.ejs %>
