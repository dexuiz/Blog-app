<% include partials/header.ejs %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit Post</div>
  <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="ui form">
    <div class="field">
        <label>name</label>
        <input type="text"  name="blog[name]" placeholder="title" value="<%=blog.name%>">
    </div>
    <div class="field">
      <label>image</label>
      <input type="text" name="blog[image]" placeholder="image" value="<%=blog.image%>">
    </div>
    <div class="field">
      <label>blog content</label>
      <textarea name="blog[body]"  ><%=blog.body %></textarea>
    </div>
    <button type ="submit" class="ui violet basic button big">Submit</button>
  </form>
</div>

